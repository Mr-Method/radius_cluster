<div class='form form-horizontal'>
    <div class='form-group'>
        <legend>_{LOGIN}_</legend>
    </div>
    <div class='form-group'>
        <label class='control-label col-md-3'>_{PREFIX}_:</label>

        <div class='col-md-9'>
            <input class='form-control' type=text name='LOGIN_PREFIX' value='%LOGIN_PREFIX%'>
        </div>
    </div>
    <div class='form-group'>
        <label class='control-label col-md-3'>_{BEGIN}_:</label>

        <div class='col-md-9'>
            <input class='form-control' type=text name='LOGIN_BEGIN' value='%LOGIN_BEGIN%'>
        </div>
    </div>
    <div class='form-group'>
        <label class='control-label col-md-3'>_{LENGTH}_:</label>

        <div class='col-md-9'>
            <input class='form-control' type=text name='LOGIN_LENGTH' value='%LOGIN_LENGTH%'>
        </div>
    </div>
    <div class='form-group'>
        <label class='control-label col-md-3'>_{FILE}_:</label>

        <div class='col-md-9'>
            <input class='form-control' type=file name='FILE_DATA' value='%FILE_DATA%'>
        </div>
    </div>
    <div class='form-group'>
        <label class='control-label col-md-3'>_{PAYMENTS}_:</label>

        <div class='col-md-9'>
            <input class='form-control-sm' type=checkbox name='PAYMENT_OPERATION' value='1'>
        </div>
    </div>
</div>